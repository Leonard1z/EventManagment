@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}
<style>
    .section-1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        text-align: center;
    }

    .text-danger {
        color: #dc3545;
    }
</style>

<div class="section-1">
    <div class="container">
        <h1 class="text-danger">Error @Model.StatusCode</h1>
        <h2 class="text-danger">@Model.ErrorMessage</h2>

        @*@if (Model.ShowRequestId)
