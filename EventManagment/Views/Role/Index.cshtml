@using Domain._DTO.Role
@model IEnumerable<RoleDto>

@{
    Layout = "~/Views/Shared/_Dependencies.cshtml";
    ViewData["Title"] = "Role Data";
}


<div class="conatiner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Role" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Role</a>

        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Role Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Role" asp-action="Edit" asp-route-encryptedId="@obj.EncryptedId"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Role" asp-action="Delete" asp-route-encryptedId="@obj.EncryptedId"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>