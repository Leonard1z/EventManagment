@using Domain._DTO.Role
@model IEnumerable<RoleDto>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Role Data";
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-12 border p-3 row-container">
            <form action="@Url.Action("Index", "Role")">
                <div class ="row" style="justify-content:space-between;">
                    <div class="col-4">
                        <a href="@Url.Action("Index", "Role")" class="list-btn">Role List <i class="bi bi-list-ul"></i></a>
                    </div>
                    <div class="col-2">
                        <a href="@Url.Action("Create", "Role")" class="create-btn">Create<i class="bi bi-plus-circle"></i></a>
                    </div>
                </div>
            </form>
            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td class="actions">
                                <a class="icon edit" href="@Url.Action("Edit", "Role", new { encryptedId = role.EncryptedId })">
                                    <div class="toltip">Edit</div>
                                    <span><i class="fa-regular fa-pen-to-square" style="color:#2a3042;"></i></span>
                                </a> |
                                <a class="icon edit" onclick="confirmDelete('@role.EncryptedId','Role','Delete')">
                                    <div class="toltip">Delete</div>
                                    <span><i class="fa-regular fa-trash-can" style="color:red"></i></span>
                                </a>
                            </td>
                        </tr> 
                    }
                </tbody>
            </table>
           
        </div>
    </div>
</div>

@section Scripts{
    @{
        //Client Site Validation
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/index.js"></script>
    }
}